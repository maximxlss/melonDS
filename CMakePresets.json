{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "description": "Base configuration",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "base-vcpkg",
      "inherits": "base",
      "description": "Base configuration with vcpkg",
      "cacheVariables": {
        "USE_VCPKG": {
          "type": "BOOL",
          "value": "ON"
        },
        "BUILD_STATIC": {
          "type": "BOOL",
          "value": "ON"
        }
      },
      "hidden": true
    },
    {
      "name": "headless",
      "inherits": "base",
      "description": "Headless build",
      "cacheVariables": {
        "BUILD_QT_SDL": "OFF",
        "BUILD_HEADLESS": "ON",
        "ENABLE_OGLRENDERER": "OFF"
      }
    },
    {
      "name": "headless-fuzz",
      "inherits": "headless",
      "description": "Headless fuzzing build with sanitizers",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fno-sanitize=leak -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fno-sanitize=leak -fstack-protector-strong -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS"
      }
    },
    {
      "name": "headless-asan-ubsan",
      "inherits": "headless",
      "description": "Headless build with ASan+UBSan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fstack-protector-strong -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS"
      }
    },
    {
      "name": "qt-asan-ubsan",
      "inherits": "base",
      "description": "Qt/SDL build with ASan+UBSan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "BUILD_QT_SDL": "ON",
        "BUILD_HEADLESS": "OFF",
        "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fstack-protector-strong -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS"
      }
    },
    {
      "name": "headless-afl",
      "inherits": "headless",
      "description": "Headless AFL++ harness (instrumented)",
      "cacheVariables": {
        "BUILD_HEADLESS_AFL": "ON",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "${sourceDir}/third_party/aflplusplus/afl-clang-fast",
        "CMAKE_CXX_COMPILER": "${sourceDir}/third_party/aflplusplus/afl-clang-fast++",
        "CMAKE_C_FLAGS": "-fno-omit-frame-pointer -fno-sanitize=leak",
        "CMAKE_CXX_FLAGS": "-fno-omit-frame-pointer -fno-sanitize=leak"
      }
    },
    {
      "name": "headless-afl-asan-ubsan",
      "inherits": "headless-afl",
      "description": "Headless AFL++ harness with ASan+UBSan",
      "environment": {
        "AFL_USE_ASAN": "1",
        "AFL_USE_UBSAN": "1"
      }
    },
    {
      "name": "headless-afl-asan-ubsan-clang",
      "inherits": "headless",
      "description": "Headless harness with ASan+UBSan (no AFL compiler)",
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=0"
      },
      "cacheVariables": {
        "BUILD_HEADLESS_AFL": "ON",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fno-sanitize=leak -fstack-protector-strong -D_FORTIFY_SOURCE=2",
        "CMAKE_CXX_FLAGS": "-fsanitize=address,undefined -fno-omit-frame-pointer -fno-sanitize-recover=all -fno-sanitize=leak -fstack-protector-strong -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS"
      }
    },
    {
      "name": "headless-afl-msan",
      "inherits": "headless-afl",
      "description": "Headless AFL++ harness with MSan",
      "environment": {
        "AFL_USE_MSAN": "1"
      }
    },
    {
      "name": "headless-afl-tsan",
      "inherits": "headless-afl",
      "description": "Headless AFL++ harness with TSan",
      "environment": {
        "AFL_USE_TSAN": "1"
      }
    },
    {
      "name": "headless-afl-cfi",
      "inherits": "headless-afl",
      "description": "Headless AFL++ harness with CFI",
      "environment": {
        "AFL_USE_CFISAN": "1"
      }
    },
    {
      "name": "release",
      "inherits": "base",
      "description": "Generic release build",
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release-mingw-x86_64",
      "inherits": "base-vcpkg",
      "displayName": "Windows MinGW Release (x64)",
      "condition": {
        "type": "notEquals",
        "lhs": "$env{MINGW_PREFIX}",
        "rhs": ""
      }
    },
    {
      "name": "base-windows",
      "inherits": "base-vcpkg",
      "description": "Base settings for Windows VS builds",
      "hidden": true,
      "displayName": "Windows base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl.exe",
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "release-windows-x86_64",
      "inherits": "base-windows",
      "displayName": "Windows Release (x64)",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "debug-windows-x86_64",
      "inherits": "release-windows-x86_64",
      "displayName": "Windows Debug (x64)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-windows-arm64",
      "inherits": "base-windows",
      "displayName": "Windows Release (ARM64)",
      "architecture": {
        "value": "arm64",
        "strategy": "external"
      }
    },
    {
      "name": "debug-windows-arm64",
      "inherits": "release-windows-arm64",
      "displayName": "Windows Debug (ARM64)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-mac-x86_64",
      "inherits": "base-vcpkg",
      "displayName": "macOS release (x86_64)",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "release-mac-arm64",
      "inherits": "base-vcpkg",
      "displayName": "macOS release (arm64)",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "headless",
      "configurePreset": "headless",
      "displayName": "Headless"
    },
    {
      "name": "headless-fuzz",
      "configurePreset": "headless-fuzz",
      "displayName": "Headless Fuzzing"
    },
    {
      "name": "headless-asan-ubsan",
      "configurePreset": "headless-asan-ubsan",
      "displayName": "Headless ASan+UBSan"
    },
    {
      "name": "qt-asan-ubsan",
      "configurePreset": "qt-asan-ubsan",
      "displayName": "Qt/SDL ASan+UBSan"
    },
    {
      "name": "headless-afl",
      "configurePreset": "headless-afl",
      "displayName": "Headless AFL++"
    },
    {
      "name": "headless-afl-asan-ubsan",
      "configurePreset": "headless-afl-asan-ubsan",
      "displayName": "Headless AFL++ ASan+UBSan"
    },
    {
      "name": "headless-afl-asan-ubsan-clang",
      "configurePreset": "headless-afl-asan-ubsan-clang",
      "displayName": "Headless Harness ASan+UBSan (no AFL compiler)"
    },
    {
      "name": "headless-afl-msan",
      "configurePreset": "headless-afl-msan",
      "displayName": "Headless AFL++ MSan"
    },
    {
      "name": "headless-afl-tsan",
      "configurePreset": "headless-afl-tsan",
      "displayName": "Headless AFL++ TSan"
    },
    {
      "name": "headless-afl-cfi",
      "configurePreset": "headless-afl-cfi",
      "displayName": "Headless AFL++ CFI"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "displayName": "Release"
    },
    {
      "name": "release-mingw-x86_64",
      "configurePreset": "release-mingw-x86_64",
      "displayName": "MinGW Release (x86_64)"
    },
    {
      "name": "release-windows-x86_64",
      "configurePreset": "release-windows-x86_64",
      "displayName": "Windows Release (x64)"
    },
    {
      "name": "debug-windows-x86_64",
      "configurePreset": "debug-windows-x86_64",
      "displayName": "Windows Debug (x64)"
    },
    {
      "name": "release-windows-arm64",
      "configurePreset": "release-windows-arm64",
      "displayName": "Windows Release (ARM64)"
    },
    {
      "name": "debug-windows-arm64",
      "configurePreset": "debug-windows-arm64",
      "displayName": "Windows Debug (ARM64)"
    },
    {
      "name": "release-mac-x86_64",
      "configurePreset": "release-mac-x86_64",
      "displayName": "macOS Release (x86_64)"
    },
    {
      "name": "release-mac-arm64",
      "configurePreset": "release-mac-arm64",
      "displayName": "macOS Release (arm64)"
    }
  ]
}
